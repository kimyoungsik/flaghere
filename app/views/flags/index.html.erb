
<%= form_tag flags_path, :method => 'get' do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
  </p>
<% end %>

<div class="displays">
	<%= render @flags %>
</div>
<%= paginate @flags %>
<%= link_to t('.new', :default => t("helpers.links.new")),
            new_flag_path,
            :class => 'btn btn-primary' %>

