<%- model_class = Flag.new.class -%>

<table class="table">
  <thead>
    <tr>
			
      
      <th>

			</th>
			<th></th>
			<th></th>
    </tr>
  </thead>
  <tbody>
    <% @flags.each do |flag| %>
      <tr>
        <td><%= image_tag flag.photo.url(:small) %></td>
        <td>
				<div> FLAG #<%= flag.id %> <%= flag.date %>(<%= Province.find_by_id(flag.province_id).name %>)</div>
				<div class ="name"> <%= flag.name %> <a class="btn btn-success" href="flags/<%= flag.id %>"><i class="icon-flag icon-white"></i></a></div> 
				<div><%= flag.description.gsub(/<\/?.*?>/, "").html_safe %></div>
				<div></div>
				</td>

        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_flag_path(flag), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      flag_path(flag),
                      :method => :delete,
                      :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to t('.new', :default => t("helpers.links.new")),
            new_flag_path,
            :class => 'btn btn-primary' %>








