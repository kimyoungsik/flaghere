<div class = "episode">
	<div class = "shot"><%= image_tag flag.photo.url(:small) %></div>
	<div class = "main">
		<div class ="info"> FLAG #<%= flag.id %> <%= flag.date %> (<%= Province.find_by_id(flag.province_id).name %>)</div>
		<div class ="name"> <%= link_to flag.name, flag_path(flag) %> </div> 
		<div class ="description"><%= flag.description.gsub(/<\/?.*?>/, "").html_safe %></div>

    <div>
      <%= link_to t('.edit', :default => t("helpers.links.edit")),
                  edit_flag_path(flag), :class => 'btn btn-mini' %>
      <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                  flag_path(flag),
                  :method => :delete,
                  :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                  :class => 'btn btn-mini btn-danger' %>
    </div>
	</div>
</div>