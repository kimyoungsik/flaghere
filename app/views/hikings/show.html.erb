<div class ="center"> <%= image_tag @hiking.hikingphoto.url(:large) %> </div>

<div class ="name"><i class="icon-user"></i> 참가합니다.</div>
<div id="hiking-participate"> 
	<%= render 'hiking_participate' %>
</div>
<table class="table">
	<thead>
		<tr>
			<th class ="name"><i class="icon-comment"></i></th>
			<th></th>
		</tr>
	</thead>
  <tbody>
     <tr>
			<td><%= profile_photo(current_user, :small, 80) %></td>
			<%= render 'kits/form' %>
     </tr>
  </tbody>
</table>


<div id="kits">
	<%= render @kits %>
</div>
<%= will_paginate @kits %>



<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              hikings_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_hiking_path(@hiking), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              hiking_path(@hiking),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>
