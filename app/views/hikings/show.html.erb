<%- model_class = @hiking.class -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:user_id) %>:</strong></dt>
  <dd><%= @hiking.user_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:province_id) %>:</strong></dt>
  <dd><%= @hiking.province_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @hiking.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:datetime) %>:</strong></dt>
  <dd><%= @hiking.datetime %></dd>
  <dt><strong><%= model_class.human_attribute_name(:location) %>:</strong></dt>
  <dd><%= @hiking.location %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @hiking.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:limit) %>:</strong></dt>
  <dd><%= @hiking.limit %></dd>
  <dt><strong><%= model_class.human_attribute_name(:status) %>:</strong></dt>
  <dd><%= @hiking.status %></dd>
 
  <dd><%= @hiking.hikingphoto_updated_at %></dd>
</dl>
<%= image_tag @hiking.hikingphoto.url(:large) %>

<li id="hiking-participate"> 
	<%= render 'hiking_participate' %>
</li>

<%= render 'kits/form' %>

<div id="kits">
	<%= render @kits %>
</div>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              hikings_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_hiking_path(@hiking), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              hiking_path(@hiking),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>
