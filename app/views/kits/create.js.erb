/* Add the new kit to the top of the kits list */
$("#kits").prepend("<%= escape_javascript(render(@kit)) %>");
$("div.search-result-blank").remove();
/* Highlight the new kit */
$("#kit_<%= @kit.id %>").effect("highlight", {}, 3000);

/* Reset the kit form */
$("#new_kit")[0].reset();

/* Make the kit and comment elastic */
$('textarea').elastic();