<%= simple_form_for @kit , :html => { :class => 'form-horizontal', :multipart => true  } do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">

    <%= f.input :content %>
		<%= f.hidden_field :kitable_id %>
		<%= f.hidden_field :kitable_type %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
