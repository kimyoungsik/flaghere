<!DOCTYPE html>
<html>
<head>
  <title>FlagHere</title>
  <!--[if lt IE 9]>
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script>
  <![endif]-->
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
	<div class="navbar navbar-fixed-top">
	  <div class="navbar-inner">
	    <div class="container">
	      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
	        <span class="icon-bar"></span>
	        <span class="icon-bar"></span>
	        <span class="icon-bar"></span>
	      </a>
	      <a class="brand" href="/"><i class="icon-flag"></i> FlagHere</a>
	      <div class="nav-collapse">
	        <ul class="nav">
						<li><%= link_to "등산모임", hikings_path %></li>
	          <li><%= link_to "사람들", users_path %></li>
	          
	        </ul>
					<ul class="nav pull-right">
	
							<li class="dropdown" id="menu1">
						    <a class="dropdown-toggle" data-toggle="dropdown" href="#menu1">
									 <i class="icon-user icon-white"></i> 사용자
						      <b class="caret"></b>
						    </a>
						    <ul class="dropdown-menu">
							
						      <li><%= render 'devise/menu/login_items' %></li>
						      <li><%= render 'devise/menu/registration_items' %></li>
									<% if admin_signed_in? || user_signed_in? %>
										<li><%= link_to "나의 페이지", user_path(current_user) %></li>
									<% end %>
						    </ul>
						  </li>

	        </ul>
	      </div>
	    </div>
	  </div>
	</div>
	<div class="container">
		<% flash.each do |name, msg| %>
	    <div class="alert alert-<%= name == :notice ? "success" : "error" %>">
	         <a class="close" data-dismiss="alert">x</a>
	      <%= msg  %>
	    </div>
	  <% end %>
	  <div class="row">
	    <div><%= yield %></div>
	  </div>
	</div>
</body>
</html>
